{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist/spec",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.config.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/*.cy.ts", "cypress", "cypress.config.ts"]
}

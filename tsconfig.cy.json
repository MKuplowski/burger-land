{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist/cypress",
    "types": ["cypress"]
  },
  "include": [
    "cypress.config.ts",
    "cypress/**/*.ts",
    "**/*.cy.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
} 